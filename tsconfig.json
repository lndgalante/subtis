{
  "compilerOptions": {

    "target": "esnext",

    "jsx": "react-jsx",
    // enable latest features
    "lib": ["esnext"],
    "moduleDetection": "force",
    "module": "esnext",
    // if TS 5.x+
    "moduleResolution": "bundler",
    // add Bun type definitions
    "types": ["bun-types"],
    "allowImportingTsExtensions": true,
    "allowJs": true,

    // best practices
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  }
}
