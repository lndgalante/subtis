{
  "license": "MIT",
  "name": "subtis",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "cli": "bun run packages/cli/app.ts",
    "indexer": "bun run packages/indexer/app.ts",
    "dev:api": "cd packages/api && bun dev",
    "dev:web": "cd packages/web && bun dev",
    "dev:cli": "bun --watch packages/cli/app.ts --file ./Totally.Killer.2023.720p.WEBRip.x264.AAC-[YTS.MX].mp4",
    "dev:indexer": "bun --watch packages/indexer/app.ts",
    "dev:raycast": "cd packages/raycast && bun dev",
    "clean:install": "bun pm cache rm && rm -rf bun.lockb && rm -rf node_modules && bun install"
  },
  "dependencies": {
    "dotenv": "^16.3.1"
  }
}
