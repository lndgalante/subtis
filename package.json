{
  "name": "subtis",
  "type": "module",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "dev:api": "cd packages/api && bun dev",
    "dev:web": "cd packages/web && bun dev",
    "dev:raycast": "cd packages/raycast && bun dev",
    "dev:indexer": "bun --watch packages/indexer/app.ts",
    "dev:cli": "bun --watch packages/cli/app.ts --file ./The.Equalizer.3.2023.1080p.WEBRip.x264.AAC5.1-[YTS.MX].mp4",
    "check:deps": "npx taze -r",
    "bump:deps": "npx taze -r -w",
    "clean:install": "bun pm cache rm && rm -rf bun.lockb && rm -rf node_modules && bun install",
    "update:deps": "bun bump:deps && bun clean:install"
  },
  "dependencies": {
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^1.2.1",
    "eslint": "^8.54.0"
  }
}
