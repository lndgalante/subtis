{
  "name": "@subtis/source",
  "type": "module",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "check": "biome check --apply .",
    "test": "bun --env-file=.env.development test",
    "test:watch": "bun --env-file=.env.development test --watch",
    "test:coverage": "bun --env-file=.env.development test --coverage",
    "type:coverage": "rm -rf coverage-ts && typescript-coverage-report -t 99 -i types.d.ts",
    "code:duplication": "jscpd --ignore 'packages/**/*.test.ts' packages/**/*.ts",
    "db:generate": "cd packages/db && bun run generate",
    "dev:api": "cd packages/api && bun dev",
    "dev:web": "cd packages/web && bun dev",
    "dev:cli": "cd packages/cli && bun dev --",
    "dev:raycast": "cd packages/raycast && bun dev",
    "dev:stremio": "cd packages/stremio && bun dev",
    "dev:indexer": "cd packages/indexer && npm run dev:node",
    "prod:indexer": "cd packages/indexer && npm run prod:node",
    "bump:deps": "taze -r -w",
    "update:deps": "bun bump:deps && bun clean:install",
    "clean:install": "bun pm cache rm && rm -rf bun.lockb node_modules && bun install"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.7.0",
    "jscpd": "^3.5.10",
    "npm-run-all": "^4.1.5",
    "taze": "^0.13.6",
    "typescript-coverage-report": "^1.0.0"
  }
}
