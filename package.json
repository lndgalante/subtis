{
  "name": "@subtis/source",
  "type": "module",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage packages/api packages/cli packages/db packages/shared packages/ui",
    "type:coverage": "rm -rf coverage-ts && typescript-coverage-report -t 100",
    "code:duplication": "jscpd --ignore 'packages/**/*.test.ts' packages/**/*.ts",
    "db:generate": "cd packages/db && bun run generate",
    "dev:api": "cd packages/api && bun dev",
    "dev:web:only": "cd packages/web && bun dev",
    "dev:web": "run-p dev:api dev:web:only",
    "dev:cli": "bun --watch packages/cli/run.ts",
    "dev:cli:params": "bun --watch packages/cli/app.ts --file ./Oppenheimer.2023.1080p.BluRay.DD5.1.x264-GalaxyRG.mkv",
    "dev:raycast:only": "cd packages/raycast && bun dev",
    "dev:raycast": "run-p dev:api dev:raycast:only",
    "dev:indexer": "bun --watch packages/indexer/app.ts",
    "dev:indexer:node": "cd packages/indexer && npm run dev:node",
    "check:deps": "taze -r",
    "bump:deps": "taze -r -w",
    "clean:install": "bun pm cache rm && rm -rf bun.lockb node_modules && bun install",
    "update:deps": "bun bump:deps && bun clean:install"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.6.4",
    "@types/eslint__eslintrc": "^2.1.1",
    "eslint-plugin-perfectionist": "^2.5.0",
    "eslint": "npm:eslint-ts-patch",
    "eslint-ts-patch": "^8.55.0-1",
    "jscpd": "^3.5.10",
    "npm-run-all": "^4.1.5",
    "taze": "0.13.1",
    "typescript-coverage-report": "^0.8.0"
  }
}
