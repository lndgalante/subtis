{
  "name": "@subtis/source",
  "type": "module",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "type:check": "tsc --noEmit",
    "biome:lint": "biome lint .",
    "biome:check": "biome check --apply-unsafe .",
    "test": "bun --env-file=.env.development test",
    "test:watch": "bun --env-file=.env.development test --watch",
    "test:coverage": "bun --env-file=.env.development test --coverage",
    "type:coverage": "rm -rf coverage-ts && typescript-coverage-report -t 100 -i types.d.ts",
    "code:duplication": "jscpd --ignore 'packages/**/*.test.ts' packages/**/*.ts",
    "update:db": "cd packages/db && bun run generate",
    "dev:web": "cd packages/web && bun run dev",
    "dev:api": "cd packages/api && bun run dev",
    "dev:cli": "cd packages/cli && bun run dev --",
    "dev:raycast": "cd packages/raycast && bun run dev",
    "dev:stremio": "cd packages/stremio && bun run dev",
    "dev:indexer:file": "cd packages/indexer && npm run dev:file",
    "dev:indexer:movies": "cd packages/indexer && npm run dev:movies",
    "dev:indexer:tv-shows": "cd packages/indexer && npm run dev:tv-shows",
    "dev:indexer:not-found": "cd packages/indexer && npm run dev:not-found",
    "deploy:web": "cd packages/web && bun run deploy",
    "deploy:api": "cd packages/api && bun run deploy",
    "bump:deps": "taze -r -w",
    "update:deps": "bun bump:deps && bun clean:install",
    "clean:install": "bun pm cache rm && bun install --force"
  },
  "devDependencies": {
    "@biomejs/biome": "1.7.3",
    "jscpd": "^3.5.10",
    "npm-run-all": "^4.1.5",
    "taze": "^0.13.8",
    "typescript-coverage-report": "^1.0.0"
  }
}
