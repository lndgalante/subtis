{
  "name": "@subtis/source",
  "type": "module",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "bun test",
    "check": "biome check --apply .",
    "lint": "biome lint .",
    "lint:apply": "biome lint --apply .",
    "format": "biome format --write .",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage packages/api packages/cli packages/db packages/shared packages/ui",
    "type:coverage": "rm -rf coverage-ts && typescript-coverage-report -t 99 -i types.d.ts",
    "code:duplication": "jscpd --ignore 'packages/**/*.test.ts' packages/**/*.ts",
    "db:generate": "cd packages/db && bun run generate",
    "dev:api": "cd packages/api && bun dev",
    "dev:web:only": "cd packages/web && bun dev",
    "dev:web": "run-p dev:api dev:web:only",
    "dev:cli": "bun --watch packages/cli/run.ts",
    "dev:cli:sample": "bun --watch packages/cli/run.ts --file ./Aquaman.and.the.Lost.Kingdom.2023.2160p.WEB-DL.DDP5.1.Atmos.DV.HDR.H.265-FLUX.mkv",
    "dev:raycast:only": "cd packages/raycast && bun dev",
    "dev:raycast": "run-p dev:api dev:raycast:only",
    "dev:indexer:node": "cd packages/indexer && npm run dev:node",
    "prod:indexer:node": "cd packages/indexer && npm run prod:node",
    "check:deps": "taze -r",
    "bump:deps": "taze -r -w",
    "clean:install": "bun pm cache rm && rm -rf bun.lockb node_modules && bun install",
    "update:deps": "bun bump:deps && bun clean:install"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.6.2",
    "jscpd": "^3.5.10",
    "npm-run-all": "^4.1.5",
    "taze": "0.13.3",
    "typescript-coverage-report": "^1.0.0"
  }
}
