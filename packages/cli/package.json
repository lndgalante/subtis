{
  "name": "@subtis/cli",
  "version": "0.0.1",
  "license": "MIT",
  "main": "app.ts",
  "scripts": {
    "deploy": "bun run build",
    "dev": "bun --watch app.ts",
    "test": "bun --env-file=.env.development test",
    "test:watch": "bun --env-file=.env.development test --watch",
    "test:coverage": "bun --env-file=.env.development test --coverage",
    "copy:bin": "sudo chmod +x bin/subtis && sudo mv bin/subtis /usr/local/bin/",
    "build": "NODE_ENV=production bun build app.ts --compile --minify --outfile bin/subtis"
  },
  "dependencies": {
    "@clack/prompts": "^0.7.0",
    "chalk": "^5.3.0",
    "minimist": "^1.2.8",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bun": "^1.1.11",
    "@types/minimist": "^1.2.5",
    "typescript": "^5.6.3"
  }
}
