{
  "$schema": "https://biomejs.dev/schemas/1.9.0/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "enabled": true,
    "lineWidth": 120,
    "indentStyle": "space"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "nursery": {
        "useSortedClasses": "warn",
        "noDuplicateElseIf": "warn"
      },
      "performance": {
        "noAccumulatingSpread": "off"
      },
      "style": {
        "useNodejsImportProtocol": "off"
      }
    }
  },
  "files": {
    "include": ["packages/**/*.ts", "packages/**/*.tsx", "docs/**/*.json"],
    "ignore": ["node_modules", "dist", "*.d.ts"]
  }
}
