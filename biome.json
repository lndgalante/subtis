{
	"$schema": "https://biomejs.dev/schemas/1.7.1/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"enabled": true,
		"lineWidth": 120
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"performance": {
				"noAccumulatingSpread": "off"
			},
			"style": {
				"useNodejsImportProtocol": "off"
			}
		}
	},
	"files": {
		"include": ["packages/**/*.ts", "packages/**/*.tsx"],
		"ignore": ["node_modules", "dist", "*.d.ts"]
	}
}
